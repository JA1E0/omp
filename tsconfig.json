{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "target": "es5",
    "allowJs": false,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "./node_modules/@lingui/macro/index.d.ts"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}